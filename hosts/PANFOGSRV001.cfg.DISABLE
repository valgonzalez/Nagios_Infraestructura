define host {
        host_name               PANFOGSRV001
        alias                   PANFOGSRV001 (Escalaci√≥n: 1. Unix Server)
	icon_image              linux40.gif
        address                 172.27.66.16
        hostgroups              linux-servers, it-servers
        max_check_attempts      3
        check_period            24x7
        check_command           check-host-alive
